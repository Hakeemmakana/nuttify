<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nutify - Create Account</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<style>

    /* Global styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Arial', sans-serif;
}

body {
    color: #333;
    line-height: 1.6;
}

.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 15px;
}

a {
    text-decoration: none;
    color: inherit;
}

ul {
    list-style: none;
}

/* Header styles */
header {
    padding: 20px 0;
    border-bottom: 1px solid #eee;
    background-color: white;
}

.nav-wrapper {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.logo h1 {
    font-weight: bold;
    font-size: 24px;
}

nav ul {
    display: flex;
}

nav ul li {
    margin-right: 20px;
}

nav ul li a {
    color: #333;
    font-weight: 500;
}

.search-bar {
    display: flex;
    background: #f5f5f5;
    border-radius: 4px;
    overflow: hidden;
    width: 300px;
}

.search-bar input {
    flex: 1;
    border: none;
    padding: 10px 15px;
    background: transparent;
    outline: none;
}

.search-bar button {
    background: transparent;
    border: none;
    padding: 0 15px;
    cursor: pointer;
}

/* Main content */
main {
    padding: 50px 0;
    background-color: #f9f9f9;
}

.signup-container {
    display: flex;
    background: white;
    border-radius: 8px;
    overflow: hidden;
}

.image-section {
    flex: 1;
    background-color: #e0f2f1;
    display: flex;
    align-items: center;
    justify-content: center;
}

.image-section img {
    max-width: 100%;
    height: auto;
}

.form-section {
    flex: 1;
    padding: 40px;
}

.form-section h2 {
    font-size: 28px;
    margin-bottom: 10px;
}

.form-section p {
    color: #666;
    margin-bottom: 30px;
}

.form-group {
    margin-bottom: 20px;
}

.form-group input {
    width: 100%;
    padding: 12px 15px;
    border: 1px solid #ddd;
    border-radius: 4px;
    outline: none;
    font-size: 16px;
}

.btn {
    display: block;
    width: 100%;
    padding: 14px;
    border: none;
    border-radius: 4px;
    font-size: 16px;
    font-weight: 500;
    cursor: pointer;
    text-align: center;
}

.btn-primary {
    background-color: #e53935;
    color: white;
}

.google-signin {
    margin: 25px 0;
}

.btn-google {
    background-color: white;
    border: 1px solid #ddd;
    color: #333;
    display: flex;
    align-items: center;
    justify-content: center;
}

.btn-google img {
    height: 20px;
    margin-right: 10px;
}

.login-link {
    text-align: center;
    margin-top: 15px;
}

.login-link a {
    color: #e53935;
    font-weight: 500;
}

/* Footer styles */
footer {
    background-color: #111;
    color: white;
    padding: 50px 0 20px;
}

.footer-content {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    margin-bottom: 30px;
}

.footer-column {
    flex: 1;
    min-width: 200px;
    margin-bottom: 30px;
}

.footer-column h3 {
    font-size: 18px;
    margin-bottom: 20px;
}

.footer-column p {
    margin-bottom: 10px;
    color: #999;
}

.footer-column ul li {
    margin-bottom: 10px;
}

.footer-column ul li a {
    color: #999;
}

.footer-column ul li a:hover {
    color: white;
}

.subscription {
    display: flex;
    margin-top: 15px;
}

.subscription input {
    flex: 1;
    background-color: #222;
    border: 1px solid #333;
    color: white;
    padding: 10px;
    border-radius: 4px 0 0 4px;
}

.subscription button {
    background-color: #222;
    border: 1px solid #333;
    border-left: none;
    color: white;
    padding: 0 15px;
    border-radius: 0 4px 4px 0;
    cursor: pointer;
}

.qr-code img {
    width: 100px;
    margin: 10px 0;
}

.app-buttons {
    display: flex;
    gap: 10px;
    margin-bottom: 15px;
}

.app-buttons img {
    height: 30px;
}

.social-icons {
    display: flex;
    gap: 15px;
}

.social-icons a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 30px;
    height: 30px;
    border-radius: 50%;
    background-color: #222;
    color: white;
}

.copyright {
    text-align: center;
    padding-top: 20px;
    border-top: 1px solid #333;
    color: #999;
    font-size: 14px;
}

/* Responsive adjustments */
@media (max-width: 992px) {
    .signup-container {
        flex-direction: column;
    }
    
    .image-section, .form-section {
        flex: none;
    }
    
    .footer-content {
        flex-direction: column;
    }
    
    .footer-column {
        width: 100%;
        margin-bottom: 30px;
    }
}

@media (max-width: 768px) {
    .nav-wrapper {
        flex-direction: column;
        gap: 15px;
    }
    
    nav ul {
        margin: 15px 0;
    }
    
    .search-bar {
        width: 100%;
    }
    

        

}
.google-icon {
            margin-right: 10px;
        }

        .google-btn {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
            background-color: white;
            cursor: pointer;
            margin-bottom: 20px;
        }

</style>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

</head>
<body>
   

    <!-- Main content -->
    <main>
        <div class="container">
            <div class="signup-container">
                <div class="image-section">
                    <img src="/users/image/login/login nuttify bottle.png" style="width: auto; height: 100%;" alt="nuttify">
                </div>
                <div class="form-section">
                    <h2>Create an account</h2>
                    <p>Enter your details below</p>
                    
                    <form method="post" action="/singup" onsubmit="validateForm(event)" >
                        <div class="form-group">
                            <input type="text" id="name" name="name" placeholder="First Name">
                        </div>
                        <div class="form-group">
                            <input type="text" id="phone" name="phone" placeholder="Phone Number">
                        </div>
                        <div class="form-group">
                            <input type="email" id="email" name="email"placeholder="Email">
                        </div>
                        <div class="form-group">
                            <input type="password" id="password" name="password" placeholder="Password">
                        </div>
                        <div class="form-group">
                            <input type="password" id="cPassword" name="cPassword" placeholder="Confirm Password">
                        </div>

                        <%if(locals.message&&message.length){%>
                            <input type="text" id="message" value=" <%=message%>" hidden>
                               
                            
                        <%}%>
                        <button type="submit" class="btn btn-primary">Create Account</button>
                        <br>
                    </form>
                            <a href="/auth/google" class="google-btn">
                                <svg class="google-icon" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 18 18">
                                    <path fill="#4285F4" d="M17.64 9.2c0-.637-.057-1.251-.164-1.84H9v3.481h4.844c-.209 1.125-.843 2.078-1.796 2.717v2.258h2.908c1.702-1.567 2.684-3.874 2.684-6.615z"/>
                                    <path fill="#34A853" d="M9 18c2.43 0 4.467-.806 5.956-2.18l-2.908-2.259c-.806.54-1.837.86-3.048.86-2.344 0-4.328-1.584-5.036-3.711H.957v2.332A8.997 8.997 0 0 0 9 18z"/>
                                    <path fill="#FBBC05" d="M3.964 10.71A5.41 5.41 0 0 1 3.682 9c0-.593.102-1.17.282-1.71V4.958H.957A8.996 8.996 0 0 0 0 9c0 1.452.348 2.827.957 4.042l3.007-2.332z"/>
                                    <path fill="#EA4335" d="M9 3.58c1.321 0 2.508.454 3.44 1.345l2.582-2.58C13.463.891 11.426 0 9 0A8.997 8.997 0 0 0 .957 4.958L3.964 7.29C4.672 5.163 6.656 3.58 9 3.58z"/>
                                </svg>
                                Login with Google
                            </a>
                        
                        
                        <div class="login-link">
                            <p>Already have account? <a href="singin">Log in</a></p>
                        </div>
                    
                </div>
            </div>
        </div>
    </main>

    <script>
        function validateForm(event) {
          const name = document.getElementById("name").value.trim();
          const phone = document.getElementById("phone").value.trim();
          const email = document.getElementById("email").value.trim();
          const password = document.getElementById("password").value;
          const cPassword = document.getElementById("cPassword").value;
      
          let error = "";
      
          if (!name) error = "Name is required.";
          else if (!/^\d{10}$/.test(phone)) error = "Enter a valid 10-digit phone number.";
          else if (!/^\S+@\S+\.\S+$/.test(email)) error = "Enter a valid email.";
          else if (password.length < 6) error = "Password must be at least 6 characters.";
          else if (password !== cPassword) error = "Passwords do not match.";
      
          if (error) {
            event.preventDefault(); 
            Swal.fire({
                icon:'error',
                title:'Oops...',
                text:error
            })
            
          }
        }
        document.addEventListener("DOMContentLoaded", function () {
          const message =document.getElementById("message").value
        if (message) {
            Swal.fire({
                icon:'error',
                title:'Oops...',
                text:message
            })}

        })
        </script>
</body>
</html>