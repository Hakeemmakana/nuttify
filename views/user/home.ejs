

<%-include("../../views/partials/user/header")%>
<style>

.container {
    max-width: 1200px;
    margin: 0 auto;
}

.section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
}

.red-bar {
    display: inline-block;
    background-color: #e74c3c;
    color: white;
    padding: 3px 8px;
    font-size: 14px;
    margin-bottom: 5px;
}

h2 {
    font-size: 24px;
    font-weight: bold;
    margin-top: 5px;
}

.view-all {
    background-color: #e74c3c;
    color: white;
    border: none;
    padding: 8px 15px;
    border-radius: 4px;
    font-size: 14px;
    cursor: pointer;
    text-decoration: none;
}

.product-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 20px;
    margin-bottom: 30px;
}

.product-card {
    position: relative;
    border-radius: 5px;
    overflow: hidden;
}

.product-image {
    width: 100%;
    height: 160px;
    object-fit: cover;
    border-radius: 5px;
}

.product-title {
    font-size: 14px;
    margin-top: 8px;
    font-weight: normal;
}

.product-price {
    color: #e74c3c;
    font-weight: bold;
    font-size: 14px;
    margin: 5px 0;
}

.product-original-price {
    text-decoration: line-through;
    color: #999;
    font-size: 14px;
    margin-left: 5px;
}

.stars {
    color: #f39c12;
    font-size: 14px;
    margin-right: 5px;
}

.reviews {
    color: #777;
    font-size: 12px;
}

.heart-icon {
    position: absolute;
    top: 10px;
    right: 10px;
    background-color: white;
    border-radius: 50%;
    width: 30px;
    height: 30px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}

.rating-container {
    display: flex;
    align-items: center;
}

.deal-banner {
    display: flex;
    background-color: #000;
    border-radius: 8px;
    overflow: hidden;
    height: 200px;
    margin-top: 30px;
}

.deal-content {
    flex: 1;
    padding: 30px;
    color: white;
}

.deal-title {
    color: #e74c3c;
    font-size: 16px;
    margin-bottom: 15px;
}

.deal-heading {
    font-size: 26px;
    font-weight: bold;
    line-height: 1.2;
    margin-bottom: 20px;
}

.deal-options {
    display: flex;
    gap: 10px;
    margin-bottom: 20px;
}

.deal-option {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background-color: #333;
    border-radius: 50%;
    font-size: 12px;
}

.deal-value {
    font-weight: bold;
    margin-bottom: 2px;
}

.deal-label {
    font-size: 10px;
    color: #999;
}

.buy-button {
    background-color: #e74c3c;
    color: white;
    border: none;
    padding: 8px 20px;
    border-radius: 4px;
    font-size: 14px;
    cursor: pointer;
}

.deal-image {
    flex: 1;
    background-size: cover;
    background-position: center;
}
.banner {
    height: 190px;
}
a{
    text-decoration: none;
}

</style>
    

