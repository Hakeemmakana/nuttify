    color: #070606;
    margin-bottom: 0px;
}
.product-span-price {
    font-size: 14px;
   
}

.product-weight {
    font-size: 14px;
    color: #666;
    margin-bottom: 10px;
}

.out-of-stock {
    color: #ff4d4f;
    font-size: 14px;
    margin-bottom: 10px;
}

.action-buttons {
    display: flex;
    margin-top: 15px;
}

.save-btn, .remove-btn {
    background: none;
    border: none;
    font-size: 14px;
    font-weight: bold;
    cursor: pointer;
    margin-right: 15px;
}

.remove-btn {
    color: #333;
    margin-left: 30px;
}

.containerCartButton {
    display: flex;
    align-items: center;
    gap: 8px;
}

.control-btn {
    width: 25px;
    height: 25px;
    border: none;
    border-radius: 50%;
    background-color: #fff;
    font-size: 18px;
    cursor: pointer;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    display: flex;
    justify-content: center;
    align-items: center;
}

.control-btn:hover {
    background-color: #f0f0f0;
}

.display {
    width: 30px;
    height: 23px;
    background-color: #fff;
    border: 1px solid #ccc;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 14px;
    font-weight: bold;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
}

        
        </style>
