<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OTP Verification</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            position: relative;
            overflow: hidden;
            padding: 20px;
        }

        /* Enhanced animated background elements */
        body::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: 
                radial-gradient(circle at 20% 50%, rgba(120, 119, 198, 0.3) 0%, transparent 50%),
                radial-gradient(circle at 80% 20%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
                radial-gradient(circle at 40% 80%, rgba(120, 119, 198, 0.2) 0%, transparent 50%),
                radial-gradient(circle at 60% 30%, rgba(255, 255, 255, 0.05) 0%, transparent 40%),
                radial-gradient(circle at 90% 70%, rgba(120, 119, 198, 0.15) 0%, transparent 60%);
            animation: backgroundMove 20s ease-in-out infinite;
            z-index: 0;
        }

        /* Floating particles */
        body::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-image: 
                radial-gradient(2px 2px at 20px 30px, rgba(255,255,255,0.2), transparent),
                radial-gradient(2px 2px at 40px 70px, rgba(255,255,255,0.1), transparent),
                radial-gradient(1px 1px at 90px 40px, rgba(255,255,255,0.15), transparent),
                radial-gradient(1px 1px at 130px 80px, rgba(255,255,255,0.1), transparent);
            background-repeat: repeat;
            background-size: 200px 200px;
            animation: sparkle 12s linear infinite;
            z-index: 0;
        }

        @keyframes backgroundMove {
            0%, 100% { transform: scale(1) rotate(0deg); }
            50% { transform: scale(1.1) rotate(3deg); }
        }

        @keyframes sparkle {
            0%, 100% { opacity: 0.3; transform: translateY(0px); }
            50% { opacity: 0.6; transform: translateY(-15px); }
        }

        /* Main container */
        .main-container {
            display: flex;
            width: 100%;
            max-width: 1100px;
            height: 650px;
            position: relative;
            z-index: 1;
            background: rgba(255, 255, 255, 0.98);
            border-radius: 24px;
            border: 2px solid rgba(255, 255, 255, 0.3);
            box-shadow: 
                0 30px 60px rgba(0, 0, 0, 0.15),
                0 15px 30px rgba(102, 126, 234, 0.1),
                inset 0 1px 0 rgba(255, 255, 255, 0.6);
            backdrop-filter: blur(20px);
            overflow: hidden;
        }

        /* Animated border */
        .main-container::before {
            content: '';
            position: absolute;
            top: -2px;
            left: -2px;
            right: -2px;
            bottom: -2px;
            background: linear-gradient(45deg, 
                rgba(102, 126, 234, 0.5) 0%, 
                rgba(118, 75, 162, 0.5) 25%,
                rgba(255, 255, 255, 0.3) 50%,
                rgba(102, 126, 234, 0.5) 75%,
                rgba(118, 75, 162, 0.5) 100%);
            border-radius: 26px;
            z-index: -1;
            animation: borderGlow 4s ease-in-out infinite alternate;
        }

        @keyframes borderGlow {
            0% { opacity: 0.7; }
            100% { opacity: 1; }
        }

        .image-container {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 50px;
            position: relative;
            background: linear-gradient(135deg, 
                rgba(102, 126, 234, 0.1) 0%, 
                rgba(118, 75, 162, 0.05) 100%);
            border-radius: 22px 0 0 22px;
        }

        .image-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border-radius: 22px 0 0 22px;
        }

        .image-placeholder {
            position: relative;
            z-index: 2;
            width: 100%;
            max-width: 400px;
            height: 400px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.2);
            animation: float 6s ease-in-out infinite;
        }

        @keyframes float {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-15px); }
        }

        .image-placeholder::before {
            content: 'üìß';
            font-size: 120px;
            color: rgba(255, 255, 255, 0.9);
            text-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }

        .form-container {
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
            padding: 50px;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 0 22px 22px 0;
            position: relative;
        }

        .form-container::before {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            bottom: 0;
            left: 0;
            background: linear-gradient(135deg, rgba(255, 255, 255, 0.9) 0%, rgba(255, 255, 255, 0.95) 100%);
            backdrop-filter: blur(20px);
            border-radius: 0 22px 22px 0;
        }

        .form-content {
            max-width: 450px;
            margin: 0 auto;
            width: 100%;
            position: relative;
            z-index: 2;
        }

        h1 {
            font-size: 36px;
            font-weight: 700;
            margin-bottom: 16px;
            color: #1a1a1a;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            text-align: center;
        }

        p {
            font-size: 18px;
            color: #64748b;
            margin-bottom: 40px;
            text-align: center;
            line-height: 1.6;
            font-weight: 400;
        }

        .verification-icon {
            text-align: center;
            margin-bottom: 30px;
        }

        .verification-icon::before {
            content: 'üîê';
            font-size: 60px;
            opacity: 0.8;
            display: inline-block;
            animation: pulse 2s ease-in-out infinite;
        }

        @keyframes pulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.1); }
        }

        .otp-input-container {
            margin-bottom: 35px;
            position: relative;
        }

        .otp-input {
            width: 100%;
            height: 70px;
            text-align: center;
            font-size: 32px;
            font-weight: 600;
            border: 2px solid #e5e7eb;
            border-radius: 16px;
            background: #ffffff;
            transition: all 0.3s ease;
            outline: none;
            letter-spacing: 8px;
            color: #1a1a1a;
        }

        .otp-input:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
            transform: translateY(-2px);
        }

        .otp-input:disabled {
            background-color: #f3f4f6;
            border-color: #d1d5db;
            color: #9ca3af;
            cursor: not-allowed;
        }

        button {
            width: 100%;
            padding: 20px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 16px;
            font-size: 18px;
            font-weight: 600;
            cursor: pointer;
            margin-bottom: 35px;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        button:hover:not(:disabled) {
            transform: translateY(-2px);
            box-shadow: 0 15px 30px rgba(102, 126, 234, 0.3);
        }

        button:active:not(:disabled) {
            transform: translateY(0);
        }

        button:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            transform: none;
            background: #9ca3af;
        }

        .resend-section {
            text-align: center;
            padding: 25px;
            background: rgba(102, 126, 234, 0.05);
            border-radius: 16px;
            border: 1px solid rgba(102, 126, 234, 0.1);
        }

        .resend-link a {
            color: #667eea;
            text-decoration: none;
            font-size: 16px;
            font-weight: 600;
            transition: all 0.3s ease;
            position: relative;
            padding: 8px 16px;
            border-radius: 8px;
        }

        .resend-link a:hover {
            color: #764ba2;
            background: rgba(102, 126, 234, 0.1);
        }

        .resend-link a::after {
            content: '';
            position: absolute;
            bottom: 2px;
            left: 16px;
            right: 16px;
            height: 2px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            transform: scaleX(0);
            transition: transform 0.3s ease;
        }

        .resend-link a:hover::after {
            transform: scaleX(1);
        }

        .timer {
            display: block;
            margin-top: 12px;
            font-size: 14px;
            color: #9ca3af;
            font-weight: 500;
        }

        .timer.expired {
            color: #ef4444;
            font-weight: 600;
        }

        /* Loading spinner */
        .loading-spinner {
            display: none;
            width: 20px;
            height: 20px;
            border: 2px solid rgba(255, 255, 255, 0.3);
            border-top: 2px solid white;
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin-right: 8px;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        button.loading .loading-spinner {
            display: inline-block;
        }

        button.loading .button-text {
            opacity: 0.7;
        }

        /* Hidden message input */
        #message {
            display: none !important;
        }

        /* Status indicators */
        .status-indicator {
            position: absolute;
            top: -8px;
            right: -8px;
            width: 16px;
            height: 16px;
            border-radius: 50%;
            display: none;
        }

        .status-indicator.success {
            background: #10b981;
            display: block;
            animation: successPulse 1s ease-in-out;
        }

        .status-indicator.error {
            background: #ef4444;
            display: block;
            animation: errorShake 0.5s ease-in-out;
        }

        @keyframes successPulse {
            0% { transform: scale(0); }
            50% { transform: scale(1.2); }
            100% { transform: scale(1); }
        }

        @keyframes errorShake {
            0%, 100% { transform: translateX(0); }
            25% { transform: translateX(-5px); }
            75% { transform: translateX(5px); }
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            body {
                padding: 10px;
            }

            .main-container {
                flex-direction: column;
                height: auto;
                min-height: 700px;
                max-width: 100%;
            }

            .image-container {
                height: 250px;
                padding: 30px;
                border-radius: 22px 22px 0 0;
            }

            .image-container::before {
                border-radius: 22px 22px 0 0;
            }

            .image-placeholder {
                max-width: 200px;
                height: 200px;
            }

            .image-placeholder::before {
                font-size: 80px;
            }

            .form-container {
                padding: 40px 30px;
                border-radius: 0 0 22px 22px;
            }

            .form-container::before {
                border-radius: 0 0 22px 22px;
            }

            h1 {
                font-size: 28px;
            }

            p {
                font-size: 16px;
            }

            .otp-input {
                height: 60px;
                font-size: 28px;
                letter-spacing: 6px;
            }
        }

        @media (max-width: 480px) {
            .main-container {
                border-radius: 20px;
                min-height: 650px;
            }

            .main-container::before {
                border-radius: 22px;
            }

            .image-container {
                height: 200px;
                padding: 20px;
                border-radius: 20px 20px 0 0;
            }

            .image-container::before {
                border-radius: 20px 20px 0 0;
            }

            .form-container {
                padding: 30px 20px;
                border-radius: 0 0 20px 20px;
            }

            .form-container::before {
                border-radius: 0 0 20px 20px;
            }

            h1 {
                font-size: 24px;
            }

            .otp-input {
                height: 55px;
                font-size: 24px;
                letter-spacing: 4px;
            }

            button {
                padding: 16px;
                font-size: 16px;
            }
        }
    </style>
</head>
<body>
    <div class="main-container">
        <div class="image-container">
            <div class="image-placeholder"></div>
        </div>
        
        <div class="form-container">
            <div class="form-content">
                <input type="text" value="<%=locals.message%>" id="message">
                
                <div class="verification-icon"></div>
                
                <h1>OTP Verification</h1>
                
                <form id="otpForm">
                    <p>Enter the 6-digit verification code sent to your email address to complete your authentication.</p>
                    
                    <div class="otp-input-container">
                        <input type="text" class="otp-input" id="otpinput" name="otpinput" maxlength="6" placeholder="000000" autocomplete="off">
                        <div class="status-indicator" id="statusIndicator"></div>
                    </div>
                    
                    <button type="submit" id="verify-button">
                        <span class="loading-spinner"></span>
                        <span class="button-text">Verify OTP</span>
                    </button>
                </form>
                
                <div class="resend-section">
                    <div class="resend-link">
                        <a href="#" onclick="resendOTP()" id="resendLink">Resend OTP</a>
                        <span class="timer" id="timer"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        let timerElement = document.getElementById("timer");
        let verifyButton = document.getElementById("verify-button");
        let otpInput = document.getElementById("otpinput");
        let resendLink = document.getElementById("resendLink");
        let statusIndicator = document.getElementById("statusIndicator");
        let countdown;
        let count = 60;

        function startTimer() {
            count = 60;
            resendLink.style.pointerEvents = 'none';
            resendLink.style.opacity = '0.5';
            timerElement.textContent = `Resend available in ${count}s`;
            timerElement.classList.remove('expired');

            countdown = setInterval(() => {
                count--;
                timerElement.textContent = `Resend available in ${count}s`;

                if (count <= 0) {
                    clearInterval(countdown);
                    timerElement.textContent = "OTP Expired - Click to resend";
                    timerElement.classList.add('expired');
                    resendLink.style.pointerEvents = 'auto';
                    resendLink.style.opacity = '1';
                    otpInput.disabled = true;
                    verifyButton.disabled = true;
                }
            }, 1000);
        }

        startTimer();

        // OTP input formatting
        otpInput.addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, ''); // Remove non-digits
            if (value.length > 6) {
                value = value.slice(0, 6);
            }
            e.target.value = value;
            
            // Reset status indicator
            statusIndicator.className = 'status-indicator';
        });

        // Form submission
        document.getElementById("otpForm").addEventListener("submit", function(event) {
            event.preventDefault();
            const otpInputValue = document.getElementById("otpinput").value;

            if (otpInputValue.length !== 6) {
                Swal.fire({
                    icon: "warning",
                    title: "Incomplete OTP",
                    text: "Please enter the complete 6-digit OTP code",
                    customClass: {
                        popup: 'modern-popup'
                    }
                });
                statusIndicator.className = 'status-indicator error';
                return;
            }

            // Show loading state
            verifyButton.classList.add('loading');
            verifyButton.disabled = true;

            // Send AJAX request
            $.ajax({
                type: "POST",
                url: "/verifyOtp",
                data: { 
                    otp: otpInputValue 
                },
                success: function(response) {
                    verifyButton.classList.remove('loading');
                    
                    if (response.success) {
                        statusIndicator.className = 'status-indicator success';
                        clearInterval(countdown);
                        
                        Swal.fire({
                            icon: "success",
                            title: "Verification Successful!",
                            text: response.message || "OTP verified successfully",
                            showConfirmButton: false,
                            timer: 2000,
                            customClass: {
                                popup: 'modern-popup'
                            }
                        }).then(() => {
                            history.replaceState(null, "", response.redirectUrl);
                            window.location.replace(response.redirectUrl);
                        });
                    } else {
                        statusIndicator.className = 'status-indicator error';
                        verifyButton.disabled = false;
                        
                        Swal.fire({
                            icon: "error",
                            title: "Verification Failed",
                            text: response.message || "Invalid OTP code",
                            customClass: {
                                popup: 'modern-popup'
                            }
                        });
                    }
                },
                error: function(xhr, status, error) {
                    verifyButton.classList.remove('loading');
                    verifyButton.disabled = false;
                    statusIndicator.className = 'status-indicator error';
                    
                    Swal.fire({
                        icon: "error",
                        title: "Verification Failed",
                        text: "Invalid OTP code. Please try again.",
                        customClass: {
                            popup: 'modern-popup'
                        }
                    });
                }
            });
        });

        function resendOTP() {
            clearInterval(countdown);
            count = 60;
            otpInput.disabled = false;
            verifyButton.disabled = false;
            otpInput.value = '';
            statusIndicator.className = 'status-indicator';
            
            // Show loading state for resend
            resendLink.textContent = 'Sending...';
            resendLink.style.pointerEvents = 'none';
            
            $.ajax({
                type: "POST",
                url: "/resendOtp",
                success: function(response) {
                    resendLink.textContent = 'Resend OTP';
                    
                    if (response.success) {
                        startTimer();
                        Swal.fire({
                            icon: "success",
                            title: "OTP Resent!",
                            text: "A new verification code has been sent to your email",
                            showConfirmButton: false,
                            timer: 2000,
                            customClass: {
                                popup: 'modern-popup'
                            }
                        });
                    } else {
                        resendLink.style.pointerEvents = 'auto';
                        Swal.fire({
                            icon: "error",
                            title: "Resend Failed",
                            text: "An error occurred while resending OTP. Please try again.",
                            customClass: {
                                popup: 'modern-popup'
                            }
                        });
                    }
                },
                error: function() {
                    resendLink.textContent = 'Resend OTP';
                    resendLink.style.pointerEvents = 'auto';
                    
                    Swal.fire({
                        icon: "error",
                        title: "Network Error",
                        text: "Unable to resend OTP. Please check your connection and try again.",
                        customClass: {
                            popup: 'modern-popup'
                        }
                    });
                }
            });
            
            return false;
        }

        // Handle server messages
        document.addEventListener("DOMContentLoaded", function() {
            const message = document.getElementById("message").value;
            if (message) {
                Swal.fire({
                    icon: "error",
                    title: "Verification Error",
                    text: "OTP has expired. Please request a new one.",
                    customClass: {
                        popup: 'modern-popup'
                    }
                });
            }
        });

        // Input focus effects
        otpInput.addEventListener('focus', function() {
            this.style.transform = 'translateY(-2px)';
        });

        otpInput.addEventListener('blur', function() {
            this.style.transform = 'translateY(0)';
        });
    </script>
</body>
</html>