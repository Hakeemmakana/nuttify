                                <%= item.status %>
                            </div>
                            <div class="status-text">
                                <%= item.paymentMetherd %>
                            </div>
                            <div class="status-container">
                                <% if(item.status == 'paymentFailed') { %>
                                    <button class="retry-payment-btn">Retry Payment</button>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </a>
            <% }) %>


