<%-include("../../views/partials/admin/sidebar")%>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: Arial, sans-serif;
    }
    
    #navbar-catogery {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: #1e2b4e;
        color: white;
        padding: 12px 20px;
        width: 100%;
        position: fixed;
        top: 0;
        left: 190px;
        z-index: 1000;
    }
    
    .navbar-left, .navbar-right {
        display: flex;
        align-items: center;
    }
    
    .menu-icon, .notification-icon {
        padding: 8px;
        cursor: pointer;
    }
    
    .container-category {
        width: calc(100% - 40px);
        margin: 80px 20px 20px 20px;
        padding: 0 20px;
    }
    
    .header-category {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }
    
    .category-title {
        font-size: 16px;
        font-weight: normal;
    }
    
    .sort-group {
        display: flex;
        align-items: center;
    }
    
    .sort-by {
        display: flex;
        align-items: center;
        margin-right: 10px;
        font-size: 14px;
    }
    
    .sort-by select {
        border: none;
        background: transparent;
        cursor: pointer;
        margin-left: 5px;
    }
    
    .search-box {
        margin: 0 10px;
    }
    
    .search-box input {
        padding: 6px 12px;
        border-radius: 15px;
        border: 1px solid #ccc;
        background-color: #f5f5f5;
        width: 230px;
        font-size: 14px;
    }
    
    .filter-button, .add-button {
        padding: 6px 12px;
        border-radius: 4px;
        cursor: pointer;
        font-size: 14px;
    }
    
    .filter-button {
        background-color: transparent;
        border: 1px solid #ccc;
        display: flex;
        align-items: center;
        margin-right: 10px;
    }
    
    .filter-button svg {
        margin-right: 5px;
    }
    
    .add-button {
        background-color: #e74c3c;
        color: white;
        border: none;
    }
    
    table {
        width: 100%;
        border-collapse: collapse;
        background-color: white;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
    }
    
    th {
        background-color: #f9f9f9;
        color: #666;
        font-weight: normal;
        text-align: left;
        padding: 12px 20px;
        font-size: 14px;
        border-bottom: 1px solid #eee;
    }
    
    td {
        padding: 12px 20px;
        border-bottom: 1px solid #eee;
        font-size: 14px;
    }
    
    .actions {
        display: flex;
        justify-content: flex-end;
    }
    
    .edit-icon, .delete-icon {
        padding: 5px;
        cursor: pointer;
        color: #666;
    }
    
    .pagination {
        display: flex;
        justify-content: flex-end;
        align-items: center;
        margin-top: 20px;
        font-size: 14px;
    }
    
    .pagination-info {
        margin-right: 20px;
    }
    
    .pagination-controls {
        display: flex;
    }
    
    .pagination-button {
        width: 30px;
        height: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 1px solid #ccc;
        margin: 0 2px;
        cursor: pointer;
    }
    
    .pagination-button.active {
        background-color: #2c3e50;
        color: white;
        border-color: #2c3e50;
    }
    
    body {
        padding-left: 190px; /* Account for sidebar width */
    }
    
    
    /* modal----------------add and edit */
    
    .modal-custom-title {
        background-color: #adc2e6;
        color: #000;
        padding: 12px;
        text-align: center;
            border-radius: 6px 6px 0 0;
            margin: -1px;
            margin-bottom: 15px;
            font-size: 1rem;
        }
        .form-label.required:after {
            content: " *";
            color: red;
        }
        .form-label {
            margin-bottom: .1rem;
        }
        .btn-add-customer {
            background-color: #dc3545;
            border-color: #dc3545;
            padding: 0.5rem 1rem;
        }
        .btn-cancel {
            background-color: #6c757d;
            border-color: #6c757d;
            padding: 0.5rem 1rem;
        }
        .table-responsive {
            margin-top: 20px;
        }
        .table th {
            font-weight: normal;
            color: #6c757d;
        }
        .action-icons {
            display: flex;
            gap: 10px;
        }
        .action-icons i {
            cursor: pointer;
        }
        .modal-dialog {
            max-width: 500px;
        }
        #desctiption{
            height: 8rem;
        }
    #modal-content-delete{
        width: 40%;
        top: 20%;
        left: 30%;
        height: 30%;
    align-items: center;
}
.deletmodalc{
    margin-top:34px;

    }
.page{
    text-decoration: none;
}

a{
    text-decoration: none;
    color: #000;
}


</style>


<div id="navbar-catogery">
    <div class="navbar-left">
        <div class="menu-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <rect x="2" y="4" width="20" height="2" fill="white"/>
                <rect x="2" y="11" width="20" height="2" fill="white"/>
                <rect x="2" y="18" width="20" height="2" fill="white"/>
            </svg>
        </div>
        <div>Category</div>
        
        <!-- <input type="text" id="message" value="<%=locals.message%>" style="background-color: none;"> -->
<h2 id="message"> <%=locals.message%></h2>
    </div>
    <div class="navbar-right">
        <div class="notification-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M13.73 21a2 2 0 0 1-3.46 0" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
        </div>
    </div>
</div>

<div class="container-category">
    <div class="header-category">
        <h2 class="category-title">Category</h2>
        <div class="sort-group">
            <div class="sort-by">
                Sort by
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M6 9l6 6 6-6" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
            </div>
            <div class="search-box">
                <input type="text" id="search" value="<%=search%>" placeholder="Search">
            </div>
            <%if(search){%>
                <button id="searchClearButton" class="filter-button">clear</button>
                <%}%>
            <button class="filter-button">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M22 3H2l8 9.46V19l4 2v-8.54L22 3z" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                Filter
            </button>
            <button class="add-button" data-bs-toggle="modal" data-bs-target="#addCatogeryModal" >Add New Category</button>
        </div>
    </div>

    <table>
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Description</th>
                <th>Status</th>
                <th style="text-align: right;">
                    <span>Actions</span>
                </th>
            </tr>
        </thead>
        <tbody>
            <%cat.forEach((category,index)=>{%>
            <tr>
                <td><%=category.name%></td>
                <td><%=category.description%></td>
                <td><%=category.isListed==true?"Liseted":"UnListed"%></td>

                <td class="actions">
                    <a href="" data-bs-toggle="modal" data-bs-target="#editCatogeryModal" onclick="editcat(`<%=category._id%>`,`<%=category.name%>`,`<%=category.description%>`,`<%=category.isListed%>`)" >
                    <div class="edit-icon">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M17 3a2.85 2.85 0 0 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z" stroke="#666" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </div>
                </a>
                <a href="" data-bs-toggle="modal" data-bs-target="#confirmationModal" onclick="deletecustomer(`<%=category._id%>`)">
                    <div class="delete-icon"  >
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M3 6h18" stroke="#666" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2" stroke="#666" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </div>
                </a>
                </td>
            </tr>
           <%})%>
        </tbody>
    </table>
 <!-- -------------------- pagination-------------- -->
    <div class="pagination">
        <div class="pagination-info"><%=startItem%>- <%=endItem%>of <%=totalCategories%></div>
        <div class="pagination-controls">
            <div class="pagination-button">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M15 18l-6-6 6-6" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
            </div>
            <%for(let i=1;i<=totalPages;i++){%>
                <%if(i==currentPage){%>
                <a class="page" href="/admin/category?page=<%=i%>&search=<%= search %>"><div class="pagination-button active"><%=i%></div></a>
                        <%} else {%>
                <a class="page" href="/admin/category?page=<%=i%>&search=<%= search %>"><div class="pagination-button "><%=i%></div></a>
            <%}}%>
            <div class="pagination-button">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M9 18l6-6-6-6" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
            </div>
        </div>
    </div>
</div>



<!-- ---------------add category modal--------------- -->
 
 <div class="modal fade" id="addCatogeryModal" tabindex="-1" aria-labelledby="addCatogeryModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-custom-title">
                Add New Category
            </div>
            <div class="modal-body">
                <form action="/admin/addCategory" method="post"  onclick="return addCategorySubmit(event)">
                         <div class="mb-3">
                             <label for="name" class="form-label required">Category Name</label>
                             <h6 style="font-size: small;margin-left: 4px; margin-bottom: 0px; color:rgb(250, 36, 36); " ></h6>
                             <input type="text" class="form-control" id="nameadd" name="name" placeholder="Category name" >
                             
                            </div>
                            <div class="mb-3">
                                <label for="desctiption" class="form-label required">Category Description</label>
                                <h6 style="font-size: small;margin-left: 4px; margin-bottom: 0px; color:rgb(250, 36, 36); " id="errormsg" ></h6>
                             <!-- <input type="text"   id="desctiption" placeholder="Category description"> -->
                             <textarea class="form-control" placeholder="Category description"  name="description" id="description" style="line-height: 1.2; padding-top: 10px; height: 150px; width: 100%;" ></textarea >
                         </div>
                         <div class="d-flex justify-content-between mt-4">
                             <button type="submit" class="btn btn-danger">Add Category</button>
                             <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                         </div>
                </form>
            </div>
        </div>
    </div>
</div>



<!-- ---------------Edit category modal--------------- -->
 
<div class="modal fade" id="editCatogeryModal" tabindex="-1" aria-labelledby="addCatogeryModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-custom-title">
                Edit Category
            </div>
            <div class="modal-body">
                <form action="/admin/editCategory" method="post"  onclick="return editCategorySubmit(event)">
                         <div class="mb-3">
                             <label for="name" class="form-label required">Category Name</label>
                             <h6 style="font-size: small;margin-left: 4px; margin-bottom: 0px; color:rgb(250, 36, 36); " ></h6>
                             <input type="text" class="form-control" id="nameedit" name="name" placeholder="Category name" required>
                             
                            </div>
                            <input type="hidden" id="categoryid" name="categoryid">
                            <div class="mb-3">
                                <label for="desctiption" class="form-label required">Category Description</label>
                                <h6 style="font-size: small;margin-left: 4px; margin-bottom: 0px; color:rgb(250, 36, 36); " id="errormsg" ></h6>
                             <!-- <input type="text"   id="desctiption" placeholder="Category description"> -->
                             <textarea class="form-control" placeholder="Category description"  name="description" id="descriptionedit" style="line-height: 1.2; padding-top: 10px; height: 150px; width: 100%;" ></textarea >
                         </div>
                         <select name="isListed" id="isListed" class="form-control">
                            
                            <option value="true" >Listed</option>
                            <option value="false">UnListed</option>
                         </select>
                         <div class="d-flex justify-content-between mt-4">
                             <button type="submit" class="btn btn-danger">Edit Category</button>
                             <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                         </div>
                         
                </form>
            </div>
        </div>
    </div>
</div>

<!-- ---------------delete confirmation------------- -->
 
<div id="confirmationModal" class="modal">
    <div class="modal-content" id="modal-content-delete">
        <h2 class="deletmodalc" >Confirmation</h2>
        <p>Are you sure you want to delete this user?</p>
        <div class="modal-buttons"style="display:flex; gap:10px;">
            <form action="/admin/deleteCategory" method="post" id="deleteconfirmation" >
            <input type="hidden" name="id" id="dcmodal"  >
            <button type="submit" class="btn btn-primary" onclick="submitDeleteForm()" >Delete</button>
            </form>
            <a href="" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</div>




