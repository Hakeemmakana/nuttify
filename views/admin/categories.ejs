    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>

    <script>
document.getElementById("search").addEventListener("keydown",function (event){
    if(event.key=="Enter"){
        const searchValue=this.value
        if(searchValue){
            window.location.href='/admin/category?search='+encodeURIComponent(searchValue)
        }
    }
})

document.getElementById("searchClearButton").addEventListener("click",function (){
    const searchValue=document.getElementById("search").value
    if(searchValue){
        window.location.href='/admin/category'
    }
})


function deletecustomer(id){
    document.getElementById("dcmodal").value=id
}
function editcat(id,name,description,isListed){
   
    document.getElementById("categoryid").value =id
    document.getElementById("nameedit").value=name
    document.getElementById("descriptionedit").value=description
    document.getElementById("isListed").value=isListed

}
function submitDeleteForm() {
    document.getElementById('confirmationModal').style.display = 'none';
    setTimeout(() => {
        location.reload(); // Reloads the page after form submission
    }, 1000);
}

document.addEventListener("DOMContentLoaded", function () {

const message =document.getElementById("message").innerText
        if(message){
            Swal.fire({
                icon:'error',
                title:'Oops...',
                text:message
            })
        }
    })

    
    </script>
    
